<form action="/" method="post">
  <label for="body">Write some stuff here!</label>
  <input id=body name=body type="text">
  <label for="find">Find a word</label>
  <input id="find" name="find" type="text">
  <label for="replace">Replace that word</label>
  <input id="replace" name="replace" type="text">
  <button type="submit">Submit</button>
</form>

@if(@Model != null)
{
  <ul>
    <li>@Model</li>
  </ul>
}
